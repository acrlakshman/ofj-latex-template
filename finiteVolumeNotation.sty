\newcommand{\fvcDDt}[1] {{\DDt{#1}}}
\newcommand{\fvcDpDt}[2] {{\DpDt{#1}{#2}}}

\newcommand{\fvcdiv}[4]
{
    \div{\left(#1\fvcinterpolate{#2}{#1}{#3}{#4}\right)}
}

\newcommand{\fvcUgrad}[4]
{
    \div{\left(#1\fvcinterpolate{#2}{#1}{#3}{#4}\right)}
  - \div\left(#1\right)#2
}

